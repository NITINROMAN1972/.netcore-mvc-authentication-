@model EPMS.Models.VMLogin;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <form asp-controller="Access" asp-action="Login" method="post">
        <h3>Login</h3>
        <input type="email" placeholder="Email" asp-for="Email" />
        <input type="text" placeholder="Password" asp-for="Password" />
        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me logged in
        </label>
        <button type="submit">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
    </form>

</body>
</html>
